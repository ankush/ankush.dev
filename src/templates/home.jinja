{% extends "layout" %}
{% block body %}
<h1>{{ title }}</h1>

<h3>Blog Posts</h3>

{% for post in posts %}
<ul>
	{% if post.meta.external_url %}
		<li><a href="{{ post.meta.external_url }}" >{{ post.meta.title }}</a></li>
	{% else %}
		<li><a href="/p/{{ post.slug}}" >{{ post.meta.title }}</a></li>
	{% endif %}
</ul>
{% endfor %}

{% endblock %}

